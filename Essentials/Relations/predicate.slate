%../../../../logics/hlm%

/**
 * @remarks This is a macro to convert a predicate taking elements of `S` and `T` to a relation from `S` to `T`.
 */
$predicate(
  S: %Set(auto = %true),
  T: %Set(auto = %true),
  parameters: %ParameterList,
  predicate[parameters]: %DefinitionRef
): %MacroOperator {
  notation = [predicate],
  references = {Relations = $Relations(
    S = {S},
    T = {T}
  )}
}
