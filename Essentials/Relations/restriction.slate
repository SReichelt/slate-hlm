%../../../../logics/hlm%

$restriction(
  S: %Set(auto = %true),
  ≺: %Element($Endorelations(S = S)),
  T: %Subset(S)
): %ExplicitOperator {
  notation = $PostfixUnaryOperator(
    symbol = $SubSup(body = '∣', sub = T),
    operand = ≺,
    minParenLevel = 3
  ),
  definition = [$../Properties/restriction(
    S = $../Sets/"Cartesian product"(S = S, T = S),
    p = ≺,
    T = $../Sets/"Cartesian product"(S = T, T = T)
  )]
}
