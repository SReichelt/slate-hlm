%../../../../../logics/hlm%

[
  $~"Nonnegative numbers" = $Subsets/"Nonnegative numbers"
]

$root(
  a: %Element($~"Nonnegative numbers"),
  n: %Element($../Natural/"Natural numbers")
): %ImplicitOperator {
  notation = $Radical(radicand = a, degree = n),
  parameter = #(r: %Element($~"Nonnegative numbers")),
  definition = [%equals(
    a,
    $power(a = r, n = n)
  )]
}
