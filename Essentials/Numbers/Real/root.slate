%../../../../../logics/hlm%

$root(
  a: %Element($Subsets/"Nonnegative numbers"),
  n: %Element($../Natural/"Natural numbers")
): %ImplicitOperator {
  notation = $Radical(
    radicand = a,
    degree = n
  ),
  parameter = #(r: %Element($Subsets/"Nonnegative numbers")),
  definition = [%equals(
    a,
    $power(
      a = r,
      n = n
    )
  )]
}
