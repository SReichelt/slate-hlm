%../../../../../logics/hlm%

/**
 * @references * https://leanprover-community.github.io/mathlib_docs/core/init/data/nat/lemmas.html#nat.distrib
 */
$"Product is distributive over sum": %StandardTheorem {
  claim = $../../Operations/distributive(
    X = {$"Natural numbers"},
    ∗ = {$../../Operations/Operations(
        X = {$"Natural numbers"},
        Y = {$"Natural numbers"},
        Z = {$"Natural numbers"}
      ).operation(_x = {
        #(
          m: %Element($"Natural numbers"),
          n: %Element(%previous)
        ),
        {z = {$product(
          m = {m},
          n = {n}
        )}}
    })},
    ⋆ = {$../../Operations/Operations(
        X = {$"Natural numbers"},
        Y = {$"Natural numbers"},
        Z = {$"Natural numbers"}
      ).operation(_x = {
        #(
          m: %Element($"Natural numbers"),
          n: %Element(%previous)
        ),
        {z = {$sum(
          m = {m},
          n = {n}
        )}}
    })}
  )
}
