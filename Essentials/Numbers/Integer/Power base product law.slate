%../../../../../logics/hlm%

$"Power base product law"(
  a,b: %Element($Integers),
  n: %Element($../Natural/"Natural numbers")
): %StandardTheorem {
  claim = %equals(
    $power(
      a = {$product(
        a = {a},
        b = {b}
      )},
      n = {n}
    ),
    $product(
      a = {$power(
        a = {a},
        n = {n}
      )},
      b = {$power(
        a = {b},
        n = {n}
      )}
    )
  )
}
