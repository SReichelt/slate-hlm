%../../../../../logics/hlm%

$finite(α: %Element($"Ordinal numbers")): %Predicate {
  notation = [$Property(
    operand = α,
    property = %neg('finite', 'infinite')
  )],
  definition = [
    $../Cardinal/finite(κ = {$cardinality(α = {α})}),
    $../../Sets/finite(S = {$Carrier(α = {α})}),
    %in(
      α,
      $../Natural/"Natural numbers"
    )
  ]
}
