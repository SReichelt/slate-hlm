%../../../../logics/hlm%

$"starts with"(
  S: %Set(auto = %true),
  𝐚: %Element($"Infinite sequences"(S = {S})),
  n: %Element(
    $../Numbers/Natural/"Natural numbers",
    auto = %true
  ),
  𝐛: %Element($"Fixed-length sequences"(
    S = {S},
    α = {n}
  ))
): %Predicate {
  display = [$TextualRelation(
    symbol = 'starts with',
    operands = [𝐚, 𝐛]
  )],
  definition = [%structural(
    𝐛,
    $"Fixed-length sequences"(
      S = {S},
      α = {n}
    ),
    [{
      constructor = $"Fixed-length sequences".sequence,
      parameters = #(j: %Binding(
        $../Numbers/Ordinal/Subsets/"Segment (less)"(α = {n}),
        #(b: %Element(S))
      )),
      value = %structural(
        𝐚,
        $"Infinite sequences"(S = {S}),
        [{
          constructor = $"Infinite sequences".sequence,
          parameters = #(k: %Binding(
            $../Numbers/Natural/"Natural numbers",
            #(a: %Element(S))
          )),
          value = %forall(
            #(k: %Element($../Numbers/Natural/Subsets/"Segment (less)"(n = {n}))),
            %equals(a[k], b[k])
          )
        }]
      )
    }]
  )]
}
