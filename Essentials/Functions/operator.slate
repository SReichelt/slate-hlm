%../../../../logics/hlm%

/**
 * @remarks This is a macro to convert an operator taking an element of `X` and returning an element of `Y` to a function from `X` to `Y`.
 */
$operator(
  X: %Set(auto = %true),
  Y: %Set(auto = %true),
  parameter: %ParameterList,
  operator[parameter]: %DefinitionRef
): %MacroOperator {
  display = [operator],
  references = {Functions = $Functions(
    X = {X},
    Y = {Y}
  )}
}
