%../../../../../logics/hlm%

/**
 * @remarks This is a macro to convert an operator taking elements of `X` and `Y` and returning an element of `Z` to an operation from `X` and `Y` to `Z`.
 */
$operator(
  X: %Set(auto = %true),
  Y: %Set(auto = %true),
  Z: %Set(auto = %true),
  parameters: %ParameterList,
  operator[parameters]: %DefinitionRef
): %MacroOperator {
  notation = operator,
  references = {Operations = $Operations(
    X = {X},
    Y = {Y},
    Z = {Z}
  )}
}
