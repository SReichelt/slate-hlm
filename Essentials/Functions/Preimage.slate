%../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Preimage
 */
$Preimage(
  X,Y: %Set(auto = %true),
  f: %Element($Functions(
    X = X,
    Y = Y
  )),
  S: %Subset(Y)
): %SetOperator {
  notation = $Function(
    function = $Inverse(term = f),
    arguments = [S]
  ),
  definition = [%subset(
    #(x: %Element(X)),
    %in(
      $value(
        X = X,
        Y = Y,
        f = f,
        x = x
      ),
      S
    )
  )]
}
