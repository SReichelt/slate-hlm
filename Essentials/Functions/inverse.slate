%../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Inverse_function
 *             * https://mathworld.wolfram.com/InverseFunction.html
 *             * https://proofwiki.org/wiki/Definition:Inverse_Mapping
 *             * https://ncatlab.org/nlab/show/inverse
 *             * https://leanprover-community.github.io/mathlib_docs/logic/function.html#function.inv_fun
 */
$inverse(
  X: %Set(auto = %true),
  Y: %Set(auto = %true),
  f: %Element($Bijections(
    X = {X},
    Y = {Y}
  ))
): %ImplicitOperator {
  notation = [$SubSup(
    body = f,
    sup = '-1'
  )],
  parameter = #(g: %Element($Bijections(
    X = {Y},
    Y = {X}
  ))),
  definition = [
    %equals(
      $composition(
        X = {X},
        Y = {Y},
        Z = {X},
        f = {f},
        g = {g}
      ),
      $identity(X = {X})
    ),
    %equals(
      $composition(
        X = {Y},
        Y = {X},
        Z = {Y},
        f = {g},
        g = {f}
      ),
      $identity(X = {Y})
    )
  ]
}
