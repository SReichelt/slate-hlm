%../../../../logics/hlm%

/**
 * @remarks This is a macro to convert a predicate taking an element of `S` to a property on `S`.
 */
$predicate(
  S: %Set(auto = %true),
  parameter: %ParameterList,
  predicate[parameter]: %DefinitionRef
): %MacroOperator {
  notation = [predicate],
  references = {Properties = $Properties(S = {S})}
}
