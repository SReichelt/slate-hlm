%../../../../../logics/hlm%

$submonoid(𝐌,𝐍: %Element($../Monoids)): %Predicate {
  notation = $SubObjectRelation(operands = [𝐌, 𝐍]),
  definition = [
    %exists(
      #(φ: %Element($../Homomorphisms/Homomorphisms(
        𝐌 = {𝐌},
        𝐍 = {𝐍}
      ))),
      formula = $../../../Essentials/Functions/injective(
        X = {$../Carrier(𝐌 = {𝐌})},
        Y = {$../Carrier(𝐌 = {𝐍})},
        f = {φ}
      )
    ),
    %exists(
      #(S: %Subset($../Carrier(𝐌 = {𝐍}))),
      formula = %and(
        $"submonoid set"(
          𝐌 = {𝐍},
          S = {S}
        ),
        %equals(
          𝐌,
          $"subset monoid"(
            𝐌 = {𝐍},
            S = {S}
          )
        )
      )
    )
  ]
}
