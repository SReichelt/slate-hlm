%../../../../logics/hlm%

$invertible(
  𝐌: %Element($Monoids),
  a: %Element($Carrier(𝐌 = {𝐌}))
): %Predicate {
  display = [$RelationalProperty(
    operands = [a, 𝐌],
    property = 'invertible',
    preposition = 'in'
  )],
  definition = [%exists(
    #(b: %Element($Carrier(𝐌 = {𝐌}))),
    formula = %and(
      %equals(
        $operation(
          𝐌 = {𝐌},
          a = {a},
          b = {b}
        ),
        $identity(𝐌 = {𝐌})
      ),
      %equals(
        $operation(
          𝐌 = {𝐌},
          a = {b},
          b = {a}
        ),
        $identity(𝐌 = {𝐌})
      )
    )
  )]
}
