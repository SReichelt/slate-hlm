%../../../../logics/hlm%

$invertible(
  𝐌: %Element(
    $Monoids,
    auto = %true
  ),
  a: %Element($Carrier(𝐌 = {𝐌}))
): %Predicate {
  display = [$Property(
    operand = a,
    property = 'invertible'
  )],
  definition = [%exists(
    #(b: %Element($Carrier(𝐌 = {𝐌}))),
    formula = %equals(
      $operation(
        𝐌 = {𝐌},
        a = {a},
        b = {b}
      ),
      $operation(
        𝐌 = {𝐌},
        a = {b},
        b = {a}
      ),
      $identity(𝐌 = {𝐌})
    )
  )]
}
