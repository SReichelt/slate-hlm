%../../../../logics/hlm%

$"semigroup with identity"(
  𝐒: %Element($../Semigroups/Semigroups),
  _1: %Constraint(%exists(
    #(e: %Element($../Magmas/Carrier(𝐌 = {𝐒}))),
    formula = $../Magmas/"identity element"(
      𝐌 = {𝐒},
      e = {e}
    )
  ))
): %ExplicitOperator {
  display = [$SubSup(
    body = 𝐒,
    sub = '𝓜𝓸𝓷'
  )],
  definition = [%structuralCases(
    𝐒,
    $../Magmas/Magmas,
    [{
      constructor = $../Magmas/Magmas.magma,
      parameters = #(
        S: %Set,
        ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {S}))
      ),
      value = $Monoids.monoid(
        M = {S},
        ∗ = {∗},
        e = {$../Magmas/identity(𝐌 = {𝐒})}
      )
    }]
  )]
}
