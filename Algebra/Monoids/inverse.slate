%../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Multiplicative_inverse
 *             * https://mathworld.wolfram.com/MultiplicativeInverse.html
 */
$inverse(
  𝐌: %Element(
    $Monoids,
    auto = %true
  ),
  a: %Element($Carrier(𝐌 = {𝐌})),
  _1: %Constraint($invertible(
    𝐌 = {𝐌},
    a = {a}
  ))
): %ImplicitOperator {
  display = [$SubSup(
    body = a,
    sup = '-1'
  )],
  parameter = #(b: %Element($Carrier(𝐌 = {𝐌}))),
  definition = [%equals(
    $operation(
      𝐌 = {𝐌},
      a = {a},
      b = {b}
    ),
    $identity(𝐌 = {𝐌})
  )]
}
