$inverse(
  ğŒ: %Element(
    $Monoids,
    auto = %true
  ),
  a: %Element($Carrier(ğŒ = {ğŒ})),
  _1: %Constraint($invertible(
    ğŒ = {ğŒ},
    a = {a}
  ))
): %ImplicitOperator {
  display = [$SubSup(
    body = a,
    sup = '-1'
  )],
  parameter = #(b: %Element($Carrier(ğŒ = {ğŒ}))),
  definition = [%equals(
    $operation(
      ğŒ = {ğŒ},
      a = {a},
      b = {b}
    ),
    $identity(ğŒ = {ğŒ})
  )]
}
