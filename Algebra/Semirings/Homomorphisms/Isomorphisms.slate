%../../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Isomorphism
 *             * https://proofwiki.org/wiki/Definition:Isomorphism_(Abstract_Algebra)
 *             * https://ncatlab.org/nlab/show/isomorphism
 */
$Isomorphisms(𝐑,𝐒: %Element($../Semirings)): %SetOperator {
  notation = $Function(
    function = 'Iso',
    arguments = [𝐑, 𝐒]
  ),
  definitionNotation = {
    parameter = #(φ: %Expr),
    notation = $FunctionDeclaration(
      function = φ,
      symbol = '↔',
      operands = [𝐑, 𝐒]
    ),
    singularName = 'isomorphism',
    pluralName = 'isomorphisms'
  },
  definition = [
    %subset(
      #(φ: %Element($Homomorphisms(
        𝐑 = 𝐑,
        𝐒 = 𝐒
      ))),
      $../../../Essentials/Functions/bijective(
        X = $../Carrier(𝐑 = 𝐑),
        Y = $../Carrier(𝐑 = 𝐒),
        f = φ
      )
    ),
    %subset(
      #(f: %Element($../../../Essentials/Functions/Bijections(
        X = $../Carrier(𝐑 = 𝐑),
        Y = $../Carrier(𝐑 = 𝐒)
      ))),
      %and(
        %forall(
          #(a,b: %Element($../Carrier(𝐑 = 𝐑))),
          %equals(
            $../../../Essentials/Functions/value(
              X = $../Carrier(𝐑 = 𝐑),
              Y = $../Carrier(𝐑 = 𝐒),
              f = f,
              x = $../sum(
                𝐑 = 𝐑,
                a = a,
                b = b
              )
            ),
            $../sum(
              𝐑 = 𝐒,
              a = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐑 = 𝐑),
                Y = $../Carrier(𝐑 = 𝐒),
                f = f,
                x = a
              ),
              b = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐑 = 𝐑),
                Y = $../Carrier(𝐑 = 𝐒),
                f = f,
                x = b
              )
            )
          )
        ),
        %equals(
          $../../../Essentials/Functions/value(
            X = $../Carrier(𝐑 = 𝐑),
            Y = $../Carrier(𝐑 = 𝐒),
            f = f,
            x = $../zero(𝐑 = 𝐑)
          ),
          $../zero(𝐑 = 𝐒)
        ),
        %forall(
          #(c,d: %Element($../Carrier(𝐑 = 𝐑))),
          %equals(
            $../../../Essentials/Functions/value(
              X = $../Carrier(𝐑 = 𝐑),
              Y = $../Carrier(𝐑 = 𝐒),
              f = f,
              x = $../product(
                𝐑 = 𝐑,
                a = c,
                b = d
              )
            ),
            $../product(
              𝐑 = 𝐒,
              a = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐑 = 𝐑),
                Y = $../Carrier(𝐑 = 𝐒),
                f = f,
                x = c
              ),
              b = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐑 = 𝐑),
                Y = $../Carrier(𝐑 = 𝐒),
                f = f,
                x = d
              )
            )
          )
        ),
        %equals(
          $../../../Essentials/Functions/value(
            X = $../Carrier(𝐑 = 𝐑),
            Y = $../Carrier(𝐑 = 𝐒),
            f = f,
            x = $../one(𝐑 = 𝐑)
          ),
          $../one(𝐑 = 𝐒)
        )
      )
    )
  ]
}
