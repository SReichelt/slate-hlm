%../../../../logics/hlm%

/**
 * @references * https://leanprover-community.github.io/mathlib_docs/core/init/algebra/ring.html#semiring.to_monoid
 */
$"multiplicative monoid"(𝐑: %Element($Semirings)): %ExplicitOperator {
  notation = $Tuple(
    items = [𝐑, '⋅'],
    style = '[]'
  ),
  definition = [%structuralCases(
    𝐑,
    $Semirings,
    [{
      constructor = $Semirings.semiring,
      parameters = #(
        R: %Set,
        ⊕: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {R})),
        "0": %Element(R),
        ⊙: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {R})),
        "1": %Element(R),
        _1: %Constraint($semiring(
          R = {R},
          ⊕ = {⊕},
          "0" = {"0"},
          ⊙ = {⊙},
          "1" = {"1"}
        ))
      ),
      value = $../Monoids/Monoids.monoid(
        M = {R},
        ∗ = {⊙},
        e = {"1"}
      )
    }]
  )]
}
