%../../../../logics/hlm%

[
  $~"Inner operations" = $../../Essentials/Operations/"Inner operations"
]

/**
 * @remarks This definition retrieves a representative carrier set from a semiring (which is actually an equivalence class of semirings), and enables typical abuse of notation.
 */
$Carrier(𝐑: %Element($Semirings)): %SetOperator {
  notation = $Parens(body = 𝐑, style = '()'),
  definitionNotation = {
    parameter = #(a: %Expr),
    notation = $ElementParameter(variable = a, set = 𝐑)
  },
  definition = [%setStructuralCases(
    𝐑, $Semirings,
    [{
      constructor = $Semirings.semiring,
      parameters = #(
        R: %Set,
        ⊕: %Element($~"Inner operations"(X = R)),
        "0": %Element(R),
        ⊙: %Element($~"Inner operations"(X = R)),
        "1": %Element(R),
        _1: %Constraint($semiring(R = R, ⊕ = ⊕, "0" = "0", ⊙ = ⊙, "1" = "1"))
      ),
      value = R
    }]
  )]
}
