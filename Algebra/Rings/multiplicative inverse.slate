$"multiplicative inverse"(
  ğ‘: %Element($Rings, auto = %true),
  a: %Element($Units(ğ‘ = ğ‘))
): %ImplicitOperator {
  notation = $Inverse(term = a),
  parameter = #(b: %Element($Units(ğ‘ = ğ‘))),
  definition = [%equals(
    $product(ğ‘ = ğ‘, a = a, b = b),
    $one(ğ‘ = ğ‘)
  )]
}
