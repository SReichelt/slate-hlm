%../../../../logics/hlm%

$"multiplicative inverse"(
  ğ‘: %Element(
    $Rings,
    auto = %true
  ),
  a: %Element($Units(ğ‘ = {ğ‘}))
): %ImplicitOperator {
  notation = [$SubSup(
    body = a,
    sup = '-1'
  )],
  parameter = #(b: %Element($Units(ğ‘ = {ğ‘}))),
  definition = [%equals(
    $product(
      ğ‘ = {ğ‘},
      a = {a},
      b = {b}
    ),
    $one(ğ‘ = {ğ‘})
  )]
}
