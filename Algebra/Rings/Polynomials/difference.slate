%../../../../../logics/hlm%

$difference(
  ğ‘: %Element(
    $../Rings,
    auto = %true
  ),
  X: %Element(
    $../../../"Formal systems"/Variables,
    auto = %true
  ),
  p,q: %Element($Polynomials(
    ğ‘ = {ğ‘},
    X = {X}
  ))
): %ExplicitOperator {
  notation = $SubtractionOperator(operands = [p, q]),
  definition = [$sum(
    ğ‘ = {ğ‘},
    X = {X},
    p = {p},
    q = {$"additive inverse"(
      ğ‘ = {ğ‘},
      X = {X},
      p = {q}
    )}
  )]
}
