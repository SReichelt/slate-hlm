%../../../../../logics/hlm%

$"additive inverse"(
  𝐑: %Element(
    $../Rings,
    auto = %true
  ),
  X: %Element(
    $../../../"Formal systems"/Variables,
    auto = %true
  ),
  p: %Element($Polynomials(
    𝐑 = {𝐑},
    X = {X}
  ))
): %ExplicitOperator {
  display = [$PrefixUnaryOperator(
    symbol = '−',
    operand = p,
    minParenLevel = 1,
    maxParenLevel = 1
  )],
  definition = [%structuralCases(
    p,
    $Polynomials(
      𝐑 = {𝐑},
      X = {X}
    ),
    [
      {
        constructor = $Polynomials(
            𝐑 = {𝐑},
            X = {X}
          ).zero,
        value = $Polynomials(
            𝐑 = {𝐑},
            X = {X}
          ).zero
      },
      {
        constructor = $Polynomials(
            𝐑 = {𝐑},
            X = {X}
          ).term,
        parameters = #(
          q: %Element($Polynomials(
            𝐑 = {𝐑},
            X = {X}
          )),
          a: %Element($../Carrier(𝐑 = {𝐑})),
          _1: %Constraint(%or(
            %not(%equals(
              q,
              $Polynomials(
                  𝐑 = {𝐑},
                  X = {X}
                ).zero
            )),
            %not(%equals(
              a,
              $../zero(𝐑 = {𝐑})
            ))
          ))
        ),
        value = $Polynomials(
            𝐑 = {𝐑},
            X = {X}
          ).term(
            p = {$"additive inverse"(
              𝐑 = {𝐑},
              X = {X},
              p = {q}
            )},
            a = {$../"additive inverse"(
              𝐑 = {𝐑},
              a = {a}
            )}
        )
      }
    ]
  )]
}
