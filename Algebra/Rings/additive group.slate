%../../../../logics/hlm%

/**
 * @references * https://leanprover-community.github.io/mathlib_docs/algebra/ring/basic.html#ring.to_add_comm_group
 */
$"additive group"(𝐑: %Element($Rings)): %ExplicitOperator {
  notation = $Tuple(
    items = [𝐑, '+'],
    style = '[]'
  ),
  definition = [%structuralCases(
    𝐑,
    $Rings,
    [{
      constructor = $Rings.ring,
      parameters = #(
        R: %Set,
        ⊕: %Element($../../Essentials/Operations/"Inner operations"(X = R)),
        "0": %Element(R),
        ⊖: %Element($../../Essentials/Functions/Functions(
          X = R,
          Y = R
        )),
        ⊙: %Element($../../Essentials/Operations/"Inner operations"(X = R)),
        "1": %Element(R),
        _1: %Constraint($ring(
          R = R,
          ⊕ = ⊕,
          "0" = "0",
          ⊖ = ⊖,
          ⊙ = ⊙,
          "1" = "1"
        ))
      ),
      value = $../Groups/Groups.group(
        G = R,
        ∗ = ⊕,
        e = "0",
        i = ⊖
      )
    }]
  )]
}
