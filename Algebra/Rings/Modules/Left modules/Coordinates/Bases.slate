%../../../../../../../logics/hlm%

$Bases(
  𝐑: %Element(
    $../../../Rings,
    auto = %true
  ),
  𝐌: %Element($../"Left modules"(𝐑 = 𝐑))
): %SetOperator {
  notation = $Function(
    function = 'Ba',
    arguments = [𝐌]
  ),
  definitionNotation = {
    parameter = #(𝒙: %Expr),
    singularName = ['basis', ' of ', 𝐌],
    pluralName = ['bases', ' of ', 𝐌]
  },
  definition = [%subset(
    #(𝒙: %Element($"Element sequences"(
      𝐑 = 𝐑,
      𝐌 = 𝐌
    ))),
    $basis(
      𝐑 = 𝐑,
      𝐌 = 𝐌,
      𝒙 = 𝒙
    )
  )]
}
