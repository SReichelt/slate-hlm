%../../../../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Module_homomorphism#Terminology
 *             * https://proofwiki.org/wiki/Definition:Isomorphism_(Abstract_Algebra)/R-Algebraic_Structure_Isomorphism/Module_Isomorphism
 *             * https://ncatlab.org/nlab/show/isomorphism
 */
$Isomorphisms(
  𝐑: %Element(
    $../../../Rings,
    auto = %true
  ),
  𝐌,𝐍: %Element($../"Left modules"(𝐑 = 𝐑))
): %SetOperator {
  notation = $Function(
    function = 'Iso',
    arguments = [𝐌, 𝐍]
  ),
  definitionNotation = {
    parameter = #(φ: %Expr),
    notation = $FunctionDeclaration(
      function = φ,
      symbol = '↔',
      operands = [𝐌, 𝐍]
    ),
    singularName = 'isomorphism',
    pluralName = 'isomorphisms'
  },
  definition = [
    %subset(
      #(φ: %Element($Homomorphisms(
        𝐑 = 𝐑,
        𝐌 = 𝐌,
        𝐍 = 𝐍
      ))),
      $../../../../../Essentials/Functions/bijective(
        X = $../Carrier(
          𝐑 = 𝐑,
          𝐌 = 𝐌
        ),
        Y = $../Carrier(
          𝐑 = 𝐑,
          𝐌 = 𝐍
        ),
        f = φ
      )
    ),
    %subset(
      #(f: %Element($../../../../../Essentials/Functions/Bijections(
        X = $../Carrier(
          𝐑 = 𝐑,
          𝐌 = 𝐌
        ),
        Y = $../Carrier(
          𝐑 = 𝐑,
          𝐌 = 𝐍
        )
      ))),
      %forall(
        #(
          a,b: %Element($../../../Carrier(𝐑 = 𝐑)),
          x,y: %Element($../Carrier(
            𝐑 = 𝐑,
            𝐌 = 𝐌
          ))
        ),
        %equals(
          $../../../../../Essentials/Functions/value(
            X = $../Carrier(
              𝐑 = 𝐑,
              𝐌 = 𝐌
            ),
            Y = $../Carrier(
              𝐑 = 𝐑,
              𝐌 = 𝐍
            ),
            f = f,
            x = $../sum(
              𝐑 = 𝐑,
              𝐌 = 𝐌,
              x = $../product(
                𝐑 = 𝐑,
                𝐌 = 𝐌,
                a = a,
                x = x
              ),
              y = $../product(
                𝐑 = 𝐑,
                𝐌 = 𝐌,
                a = b,
                x = y
              )
            )
          ),
          $../sum(
            𝐑 = 𝐑,
            𝐌 = 𝐍,
            x = $../product(
              𝐑 = 𝐑,
              𝐌 = 𝐍,
              a = a,
              x = $../../../../../Essentials/Functions/value(
                X = $../Carrier(
                  𝐑 = 𝐑,
                  𝐌 = 𝐌
                ),
                Y = $../Carrier(
                  𝐑 = 𝐑,
                  𝐌 = 𝐍
                ),
                f = f,
                x = x
              )
            ),
            y = $../product(
              𝐑 = 𝐑,
              𝐌 = 𝐍,
              a = b,
              x = $../../../../../Essentials/Functions/value(
                X = $../Carrier(
                  𝐑 = 𝐑,
                  𝐌 = 𝐌
                ),
                Y = $../Carrier(
                  𝐑 = 𝐑,
                  𝐌 = 𝐍
                ),
                f = f,
                x = y
              )
            )
          )
        )
      )
    )
  ]
}
