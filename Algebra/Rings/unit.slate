%../../../../logics/hlm%

$unit(
  𝐑: %Element(
    $Rings,
    auto = %true
  ),
  a: %Element($Carrier(𝐑 = {𝐑}))
): %Predicate {
  display = [$NounProperty(
    operand = a,
    singular = 'unit',
    plural = 'units'
  )],
  definition = [
    %exists(
      #(b: %Element($Carrier(𝐑 = {𝐑}))),
      formula = %equals(
        $product(
          𝐑 = {𝐑},
          a = {a},
          b = {b}
        ),
        $product(
          𝐑 = {𝐑},
          a = {b},
          b = {a}
        ),
        $one(𝐑 = {𝐑})
      )
    ),
    %existsUnique(
      #(b: %Element($Carrier(𝐑 = {𝐑}))),
      formula = %equals(
        $product(
          𝐑 = {𝐑},
          a = {a},
          b = {b}
        ),
        $product(
          𝐑 = {𝐑},
          a = {b},
          b = {a}
        ),
        $one(𝐑 = {𝐑})
      )
    )
  ]
}
