%../../../../../logics/hlm%

$"product with right scalar"(
  𝐑: %Element(
    $../Rings,
    auto = %true
  ),
  m,n: %Element(
    $../../../Essentials/Numbers/Natural/"Natural numbers",
    auto = %true
  ),
  A: %Element($Matrices(𝐑 = 𝐑, m = m, n = n)),
  r: %Element($../Carrier(𝐑 = 𝐑))
): %ExplicitOperator {
  notation = $MultiplicationOperator(operands = [A, r]),
  definition = [%structuralCases(
    A,
    $Matrices(𝐑 = 𝐑, m = m, n = n),
    [{
      constructor = $Matrices.matrix,
      parameters = #(_1: %Binder(
        #(
          i: %Element($../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = m)),
          j: %Element($../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = n))
        ),
        #(a: %Element($../Carrier(𝐑 = 𝐑)))
      )),
      value = $Matrices(𝐑 = 𝐑, m = m, n = n).matrix(_1 = {
          #(
            i: %Element($../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = m)),
            j: %Element($../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = n))
          ),
          {a = $../product(
            𝐑 = 𝐑,
            a = a[i = i, j = j],
            b = r
          )}
      })
    }]
  )]
}
