%../../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Matrix_(mathematics)
 *             * https://mathworld.wolfram.com/Matrix.html
 *             * https://proofwiki.org/wiki/Definition:Matrix
 *             * https://ncatlab.org/nlab/show/matrix
 *             * https://leanprover-community.github.io/mathlib_docs/data/matrix/basic.html#matrix
 */
$Matrices(
  𝐑: %Element(
    $../Rings,
    auto = %true
  ),
  m: %Element($../../../Essentials/Numbers/Natural/"Natural numbers"),
  n: %Element(%previous)
): %Construction {
  $matrix(i: %Binding(
    $../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {m}),
    #(j: %Binding(
      $../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {n}),
      #(a: %Element($../Carrier(𝐑 = {𝐑})))
    ))
  )): %Constructor {
    display = [$SubSup(
      body = $Parens(
        body = a,
        style = '()'
      ),
      sub = $Group(items = [
        $Relation(
          symbol = '<',
          operands = [i, m]
        ),
        $Relation(
          symbol = '<',
          operands = [j, n]
        )
      ])
    )],
    equalityDefinition = {
      leftParameters = #(i: %Binding(
        $../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {m}),
        #(j: %Binding(
          $../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {n}),
          #(a: %Element($../Carrier(𝐑 = {𝐑})))
        ))
      )),
      rightParameters = #(i: %Binding(
        $../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {m}),
        #(j: %Binding(
          $../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {n}),
          #(b: %Element($../Carrier(𝐑 = {𝐑})))
        ))
      )),
      definition = [%forall(
        #(
          i: %Element($../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {m})),
          j: %Element($../../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {n}))
        ),
        %equals(a[i,j], b[i,j])
      )],
      isomorphic = %true
    }
  }

  display = [$SubSup(
    body = 𝐑,
    sup = $Operator(
      symbol = '×',
      space = ' ',
      operands = [m, n]
    )
  )]
}
