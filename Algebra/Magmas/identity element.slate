%../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Identity_element
 *             * https://mathworld.wolfram.com/IdentityElement.html
 *             * https://proofwiki.org/wiki/Definition:Identity_Element
 *             * https://ncatlab.org/nlab/show/identity+element
 */
$"identity element"(
  𝐌: %Element($Magmas),
  e: %Element($Carrier(𝐌 = {𝐌}))
): %Predicate {
  display = [$NounRelation(
    operands = [e, 𝐌],
    singular = 'identity element',
    plural = 'identity elements',
    article = 'an'
  )],
  definition = [%forall(
    #(a: %Element($Carrier(𝐌 = {𝐌}))),
    %equals(
      $operation(
        𝐌 = {𝐌},
        a = {e},
        b = {a}
      ),
      $operation(
        𝐌 = {𝐌},
        a = {a},
        b = {e}
      ),
      a
    )
  )]
}
