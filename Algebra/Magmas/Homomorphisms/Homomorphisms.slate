%../../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Magma_(algebra)#Morphism_of_magmas
 *             * https://proofwiki.org/wiki/Definition:Homomorphism_(Abstract_Algebra)
 *             * https://ncatlab.org/nlab/show/homomorphism
 */
$Homomorphisms(
  𝐌: %Element($../Magmas),
  𝐍: %Element(%previous)
): %SetOperator {
  notation = $Function(
    function = 'Hom',
    arguments = [𝐌, 𝐍]
  ),
  definitionNotation = {
    parameter = #(φ: %Expr),
    notation = $FunctionDeclaration(
      function = φ,
      operands = [𝐌, 𝐍]
    ),
    singularName = 'homomorphism',
    pluralName = 'homomorphisms'
  },
  definition = [%subset(
    #(f: %Element($../../../Essentials/Functions/Functions(
      X = {$../Carrier(𝐌 = {𝐌})},
      Y = {$../Carrier(𝐌 = {𝐍})}
    ))),
    %forall(
      #(
        a: %Element($../Carrier(𝐌 = {𝐌})),
        b: %Element(%previous)
      ),
      %equals(
        $../../../Essentials/Functions/value(
          X = {$../Carrier(𝐌 = {𝐌})},
          Y = {$../Carrier(𝐌 = {𝐍})},
          f = {f},
          x = {$../operation(
            𝐌 = {𝐌},
            a = {a},
            b = {b}
          )}
        ),
        $../operation(
          𝐌 = {𝐍},
          a = {$../../../Essentials/Functions/value(
            X = {$../Carrier(𝐌 = {𝐌})},
            Y = {$../Carrier(𝐌 = {𝐍})},
            f = {f},
            x = {a}
          )},
          b = {$../../../Essentials/Functions/value(
            X = {$../Carrier(𝐌 = {𝐌})},
            Y = {$../Carrier(𝐌 = {𝐍})},
            f = {f},
            x = {b}
          )}
        )
      )
    )
  )]
}
