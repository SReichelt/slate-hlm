%../../../../logics/hlm%

$submagma(
  𝐌: %Element($Magmas),
  𝐍: %Element(%previous)
): %Predicate {
  display = [
    $Relation(
      symbol = %neg('≤', '≰'),
      operands = [𝐌, 𝐍]
    ),
    $Relation(
      symbol = %neg('≥', '≱'),
      operands = [𝐍, 𝐌]
    )
  ],
  definition = [
    %exists(
      #(φ: %Element($Homomorphisms(
        𝐌 = {𝐌},
        𝐍 = {𝐍}
      ))),
      formula = $../../Essentials/Functions/injective(
        X = {$Carrier(𝐌 = {𝐌})},
        Y = {$Carrier(𝐌 = {𝐍})},
        f = {φ}
      )
    ),
    %exists(
      #(S: %Subset($Carrier(𝐌 = {𝐍}))),
      formula = %and(
        $"submagma set"(
          𝐌 = {𝐍},
          S = {S}
        ),
        %equals(
          𝐌,
          $"subset magma"(
            𝐌 = {𝐍},
            S = {S}
          )
        )
      )
    )
  ]
}
