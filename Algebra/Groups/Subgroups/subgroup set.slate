%../../../../../logics/hlm%

$"subgroup set"(
  𝐆: %Element($../Groups),
  S: %Subset($../Carrier(𝐆 = {𝐆}))
): %Predicate {
  display = [$NounRelation(
    operands = [S, 𝐆],
    singular = 'subgroup',
    plural = 'subgroups'
  )],
  definition = [%and(
    %forall(
      #(
        a: %Element(S),
        b: %Element(%previous)
      ),
      %in(
        $../operation(
          𝐆 = {𝐆},
          a = {a},
          b = {b}
        ),
        S
      )
    ),
    %in(
      $../identity(𝐆 = {𝐆}),
      S
    ),
    %forall(
      #(c: %Element(S)),
      %in(
        $../inverse(
          𝐆 = {𝐆},
          a = {c}
        ),
        S
      )
    )
  )]
}
