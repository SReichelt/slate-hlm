%../../../../../logics/hlm%

$subgroup(
  𝐆: %Element($../Groups),
  𝐇: %Element(%previous)
): %Predicate {
  notation = $SubObjectRelation(operands = [𝐆, 𝐇]),
  definition = [
    %exists(
      #(φ: %Element($../Homomorphisms/Homomorphisms(
        𝐆 = {𝐆},
        𝐇 = {𝐇}
      ))),
      formula = $../../../Essentials/Functions/injective(
        X = {$../Carrier(𝐆 = {𝐆})},
        Y = {$../Carrier(𝐆 = {𝐇})},
        f = {φ}
      )
    ),
    %exists(
      #(S: %Subset($../Carrier(𝐆 = {𝐇}))),
      formula = %and(
        $"subgroup set"(
          𝐆 = {𝐇},
          S = {S}
        ),
        %equals(
          𝐆,
          $"subset group"(
            𝐆 = {𝐇},
            S = {S}
          )
        )
      )
    )
  ]
}
