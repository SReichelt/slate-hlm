%../../../../../logics/hlm%

$"normal subgroup"(
  𝐆: %Element($../Groups),
  𝐇: %Element(%previous)
): %Predicate {
  notation = [$NormalSubgroupRelation(operands = [𝐆, 𝐇])],
  definition = [%exists(
    #(S: %Subset($../Carrier(𝐆 = {𝐇}))),
    formula = %and(
      $"normal subgroup set"(
        𝐆 = {𝐇},
        S = {S}
      ),
      %equals(
        𝐆,
        $"subset group"(
          𝐆 = {𝐇},
          S = {S}
        )
      )
    )
  )]
}
