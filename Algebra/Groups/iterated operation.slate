/**
 * @example `$../../Essentials/Functions/Operations/"Iterated operations"/"indexed by natural number"(X = {$Carrier(𝐆 = {𝐆})}, ⨂ = {$"iterated operation"(𝐆 = {𝐆})}, n = {n}, i = {#(i: %Element($../../Essentials/Numbers/Natural/Subsets/"Segment (less)"(n = {n}))), {a = {a[i]}}})`
 *
 * @references * https://en.wikipedia.org/wiki/Multiplication#Capital_pi_notation
 *             * https://mathworld.wolfram.com/Product.html
 *             * https://proofwiki.org/wiki/Definition:Product_Notation_(Algebra)
 */
$"iterated operation"(
  𝐆: %Element($Groups),
  _1: %Constraint($abelian(𝐆 = {𝐆}))
): %ExplicitOperator {
  notation = [$SubSup(
    body = '∏',
    sub = 𝐆
  )],
  definition = [%structuralCases(
    𝐆,
    $Groups,
    [{
      constructor = $Groups.group,
      parameters = #(
        G: %Set,
        ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {G})),
        e: %Element(G),
        i: %Element($../../Essentials/Functions/Functions(
          X = {G},
          Y = {G}
        )),
        _1: %Constraint($group(
          G = {G},
          ∗ = {∗},
          e = {e},
          i = {i}
        ))
      ),
      value = $../../Essentials/Functions/Operations/"Iterated operations"/"Iterated operations"(X = {G}).operation(
          ∗ = {∗},
          e = {e}
      )
    }]
  )]
}
