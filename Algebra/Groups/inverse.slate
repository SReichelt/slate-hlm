%../../../../logics/hlm%

$inverse(
  𝐆: %Element(
    $Groups,
    auto = %true
  ),
  a: %Element($Carrier(𝐆 = 𝐆))
): %ExplicitOperator {
  notation = $Inverse(term = a),
  definition = [%structuralCases(
    𝐆,
    $Groups,
    [{
      constructor = $Groups.group,
      parameters = #(
        G: %Set,
        ∗: %Element($../../Essentials/Operations/"Inner operations"(X = G)),
        e: %Element(G),
        i: %Element($../../Essentials/Functions/Functions(
          X = G,
          Y = G
        )),
        _1: %Constraint($group(
          G = G,
          ∗ = ∗,
          e = e,
          i = i
        ))
      ),
      value = $../../Essentials/Functions/value(
        X = G,
        Y = G,
        f = i,
        x = a
      )
    }]
  )]
}
