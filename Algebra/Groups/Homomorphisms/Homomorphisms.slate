%../../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Group_homomorphism
 *             * https://mathworld.wolfram.com/GroupHomomorphism.html
 *             * https://proofwiki.org/wiki/Definition:Group_Homomorphism
 *             * https://ncatlab.org/nlab/show/homomorphism
 *             * https://leanprover-community.github.io/mathlib_docs/algebra/group/hom.html#monoid_hom
 */
$Homomorphisms(𝐆,𝐇: %Element($../Groups)): %SetOperator {
  notation = $Function(
    function = 'Hom',
    arguments = [𝐆, 𝐇]
  ),
  definitionNotation = {
    parameter = #(φ: %Expr),
    notation = $FunctionDeclaration(
      function = φ,
      operands = [𝐆, 𝐇]
    ),
    singularName = 'homomorphism',
    pluralName = 'homomorphisms'
  },
  definition = [
    %subset(
      #(f: %Element($../../../Essentials/Functions/Functions(
        X = $../Carrier(𝐆 = 𝐆),
        Y = $../Carrier(𝐆 = 𝐇)
      ))),
      %and(
        %forall(
          #(a,b: %Element($../Carrier(𝐆 = 𝐆))),
          %equals(
            $../../../Essentials/Functions/value(
              X = $../Carrier(𝐆 = 𝐆),
              Y = $../Carrier(𝐆 = 𝐇),
              f = f,
              x = $../operation(𝐆 = 𝐆, a = a, b = b)
            ),
            $../operation(
              𝐆 = 𝐇,
              a = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐆 = 𝐆),
                Y = $../Carrier(𝐆 = 𝐇),
                f = f,
                x = a
              ),
              b = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐆 = 𝐆),
                Y = $../Carrier(𝐆 = 𝐇),
                f = f,
                x = b
              )
            )
          )
        ),
        %equals(
          $../../../Essentials/Functions/value(
            X = $../Carrier(𝐆 = 𝐆),
            Y = $../Carrier(𝐆 = 𝐇),
            f = f,
            x = $../identity(𝐆 = 𝐆)
          ),
          $../identity(𝐆 = 𝐇)
        ),
        %forall(
          #(c: %Element($../Carrier(𝐆 = 𝐆))),
          %equals(
            $../../../Essentials/Functions/value(
              X = $../Carrier(𝐆 = 𝐆),
              Y = $../Carrier(𝐆 = 𝐇),
              f = f,
              x = $../inverse(𝐆 = 𝐆, a = c)
            ),
            $../inverse(
              𝐆 = 𝐇,
              a = $../../../Essentials/Functions/value(
                X = $../Carrier(𝐆 = 𝐆),
                Y = $../Carrier(𝐆 = 𝐇),
                f = f,
                x = c
              )
            )
          )
        )
      )
    ),
    %subset(
      #(f: %Element($../../../Essentials/Functions/Functions(
        X = $../Carrier(𝐆 = 𝐆),
        Y = $../Carrier(𝐆 = 𝐇)
      ))),
      %forall(
        #(a,b: %Element($../Carrier(𝐆 = 𝐆))),
        %equals(
          $../../../Essentials/Functions/value(
            X = $../Carrier(𝐆 = 𝐆),
            Y = $../Carrier(𝐆 = 𝐇),
            f = f,
            x = $../operation(𝐆 = 𝐆, a = a, b = b)
          ),
          $../operation(
            𝐆 = 𝐇,
            a = $../../../Essentials/Functions/value(
              X = $../Carrier(𝐆 = 𝐆),
              Y = $../Carrier(𝐆 = 𝐇),
              f = f,
              x = a
            ),
            b = $../../../Essentials/Functions/value(
              X = $../Carrier(𝐆 = 𝐆),
              Y = $../Carrier(𝐆 = 𝐇),
              f = f,
              x = b
            )
          )
        )
      )
    )
  ]
}
