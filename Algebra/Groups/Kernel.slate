%../../../../logics/hlm%

$Kernel(
  𝐆: %Element(
    $Groups,
    auto = %true
  ),
  𝐇: %Element(
    %previous,
    auto = %true
  ),
  φ: %Element($Homomorphisms(
    𝐆 = {𝐆},
    𝐇 = {𝐇}
  ))
): %SetOperator {
  display = [$Function(
    function = 'Ker',
    arguments = [φ]
  )],
  definition = [%subset(
    #(g: %Element($Carrier(𝐆 = {𝐆}))),
    %equals(
      $../../Essentials/Functions/value(
        X = {$Carrier(𝐆 = {𝐆})},
        Y = {$Carrier(𝐆 = {𝐇})},
        f = {φ},
        x = {g}
      ),
      $"identity element"(𝐆 = {𝐇})
    )
  )]
}
