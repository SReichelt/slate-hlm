%../../../../../logics/hlm%

$"pointed subset"(
  𝐒: %Element($../"Pointed sets"),
  𝐓: %Element(%previous)
): %Predicate {
  notation = $SubObjectRelation(operands = [𝐒, 𝐓]),
  definition = [
    %exists(
      #(φ: %Element($../Homomorphisms/Homomorphisms(
        𝐒 = {𝐒},
        𝐓 = {𝐓}
      ))),
      formula = $../../../Essentials/Functions/injective(
        X = {$../Carrier(𝐒 = {𝐒})},
        Y = {$../Carrier(𝐒 = {𝐓})},
        f = {φ}
      )
    ),
    %exists(
      #(S: %Subset($../Carrier(𝐒 = {𝐓}))),
      formula = %and(
        $"subset of pointed set"(
          𝐒 = {𝐓},
          S = {S}
        ),
        %equals(
          𝐒,
          $"subset as pointed set"(
            𝐒 = {𝐓},
            S = {S}
          )
        )
      )
    )
  ]
}
